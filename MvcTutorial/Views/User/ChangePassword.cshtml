@model MvcTutorial.Models.UserChangePasswordModelClass
@{
    ViewBag.Title = "Change Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/jquery-3.3.1.min.js"></script>

<h3></h3>
<div class="panel panel-success">
    <div class="panel-heading"><h3 style="text-align:center"><b>Change Password Module</b></h3></div>
</div>


<div class="row">
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading"><h4 style="text-align:center"><b>Change Password</b></h4></div>
            <div class="panel-body">
                @using (Html.BeginForm())
                {
                    <p>
                        <label>Old Password</label>
                        @Html.EditorFor(model => model.OldPassword, new { htmlAttributes = new { @class = "form-control" } })
                        <font color="red">  @Html.ValidationMessageFor(model => model.OldPassword)</font>
                    </p>
                    <p>
                        <label>New Password</label>
                        @Html.EditorFor(model => model.NewPassword, new { htmlAttributes = new { @class = "form-control" } })
                        <font color="red">  @Html.ValidationMessageFor(model => model.NewPassword)</font>
                    </p>
                    <p>
                        <label>Confirm Password</label>
                        @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control" } })
                        <font color="red">  @Html.ValidationMessageFor(model => model.ConfirmPassword)</font>
                    </p>

                    <button class="btn">Change Password</button>
                    <br />
                    // here i m adding Font Color Red To Display Error Message
                    <font color=green>  @ViewBag.SuccessMessage</font>
                    <font color=red>@ViewBag.Message</font>
                }
            </div>
        </div>
    </div>

    <div class="col-md-8">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h4>Change Password Content</h4>
            </div>
            <div class="panel-body">
                <p>
                    Change Password page is allow user to create new Password. So in this page we Created 3 class which are lsited below.
                </p>
                <ul>
